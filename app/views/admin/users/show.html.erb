
<%= link_to 'Change password', admin_user_password_path(@user), class: 'btn btn-success mb-3' %>

<div class="card">
  <div class="card-header">
    <strong><%= @user.full_name %></strong>
    <%= render 'partials/user_status', user: @user %>
  </div>
  <div class="card-body">
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Birthday:</strong>
      <%= @user.birthday %>
    </p>
    <p>
      <strong>Gender:</strong>
      <%= @user.gender_name %>
    </p>
    <p>
      <strong>Phone:</strong>
      +<%= @user.city.present? ? @user.city.country.phone_code : '' %>
      <%= @user.phone %>
    </p>
    <p>
      <strong>City:</strong>
      <%= @user.city.present? ? @user.city.name : '' %>
    </p>

    <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary' %> |
    <%= link_to 'Destroy', admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-danger'%> |
    <%= link_to 'Back', admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>
