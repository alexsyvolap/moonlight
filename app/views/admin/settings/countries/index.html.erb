<%= render('admin/settings/nav') %>

<p id="notice"><%= notice %></p>

<%= link_to 'New Country', new_admin_settings_country_path, class: 'btn btn-success mt-3 mb-3' %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short code</th>
      <th>Phone code</th>
      <th>Nickname</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr class="active_table__tr" data-location="<%= admin_settings_country_path(country) %>"
          data-toggle="tooltip" data-placement="bottom" title="Show country">
        <td><%= country.name %></td>
        <td><%= country.short_code %></td>
        <td><%= country.phone_code %></td>
        <td><%= country.nickname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @countries %>
</div>
