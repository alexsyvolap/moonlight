<%= form_with(model: country, url: model_url, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :short_code %>
    <%= form.text_field :short_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone_code %>
    <%= form.text_field :phone_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success mb-3' %>
  </div>
<% end %>
