<div class="login-buttons">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-success mr-2' %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
  <% end %>
</div>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post,
            class: 'form-signin'}) do |f| %>

  <img class="mb-4" src="/images/moon_logo.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Resend confirmation instructions</h1>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
      class: 'form-control', placeholder: 'Enter Email address' %>

  <%= f.submit "Resend confirm instructions", class: 'btn btn-lg btn-secondary btn-block mt-3' %>

  <div class="mt-3">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end %>
  </div>
<% end %>
