<%= form_with(model: city, url: model_url, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name, t('city.field.name') %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :country_id, t('city.field.country') %>
    <%= form.text_field :country_id, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit button_name, class: 'btn btn-success mb-3' %>
  </div>
<% end %>
