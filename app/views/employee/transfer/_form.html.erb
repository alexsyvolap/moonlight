<%= form_with(url: employee_transfer_index_path, local: true,
              html: { autocomplete: "off" }) do |form| %>

  <div class="custom_radio_group">
    <% bills.each do |bill| %>
      <%= render(partial: 'partials/replenishment/radio_card', locals: { bill: bill }) %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :card_number, t('bill.field.card_number_to_transfer') %>
    <%= form.text_field :card_number, class: 'form-control card_number', value: '', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :amount, t('bill.field.sum') %>
    <div class="input-group mb-3">
      <%= form.text_field :amount, class: 'form-control money', value: '', required: true %>
      <div class="input-group-append">
        <span class="input-group-text"><%= t('number.currency.format.unit') %></span>
      </div>
    </div>
  </div>
  <%= render(partial: 'partials/fast_money_buttons') %>
  <div class="actions mt-3">
    <%= form.submit t('action.transfer'), class: 'btn btn-primary mb-3' %>
  </div>
<% end %>