<div class="login-buttons">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('devise.fields.signup'), new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
  <% end %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),
             html: {class: 'form-signin'}) do |f| %>

  <img class="mb-4" src="/images/moon_logo.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal"><%= t('devise.fields.please_login') %></h1>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t('user.field.email') %>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t('user.field.password') %>
  </div>

  <div class="checkbox mb-3">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.fields.remember') %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.fields.login'), class: 'btn btn-lg btn-success btn-block' %>
  </div>

  <div class="mt-3">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('devise.fields.forgot_password'), new_password_path(resource_name) %><br />
    <% end %>
  </div>
<% end %>
