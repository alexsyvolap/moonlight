<table class="table table-striped table-bordered">
  <thead class="text-center">
  <tr>
    <th><%= t('transaction.field.status') %></th>
    <th><%= t('transaction.field.amount') %></th>
    <th><%= t('transaction.field.date') %></th>
  </tr>
  </thead>
  <tbody class="text-center">
    <% if user.user_role? %>
      <%= render(partial: 'employee/bills/partials/transactions', collection: transactions) %>
    <% elsif user.admin_role? %>
      <%= render(partial: 'admin/bills/partials/transactions', collection: transactions) %>
    <% end %>
  </tbody>
</table>