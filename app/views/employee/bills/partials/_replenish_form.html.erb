<%= form_with(model: bill, url: model_url, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :amount, t('bill.field.sum') %>
    <div class="input-group mb-3">
      <%= form.text_field :amount, class: 'form-control money', value: '' %>
      <div class="input-group-append">
        <span class="input-group-text"><%= t('number.currency.format.unit') %></span>
      </div>
    </div>
  </div>
  <%= render(partial: 'partials/fast_money_buttons') %>
  <div class="actions mt-3">
    <%= form.submit t('action.replenishment'), class: 'btn btn-success mb-3' %>
  </div>
<% end %>
