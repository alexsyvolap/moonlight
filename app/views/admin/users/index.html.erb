
<%#= link_to 'New User', new_admin_user_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t('user.field.full_name') %></th>
      <th><%= t('user.field.email') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="active_table__tr" data-location="<%= admin_user_path(user) %>"
          data-toggle="tooltip" data-placement="bottom" title="<%= t('user.action.show', user: user.full_name) %>">
        <td>
          <%= user.full_name %>
          <%= render 'partials/user_status', user: user %>
        </td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @users %>
</div>
