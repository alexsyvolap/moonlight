<%= form_with(model: bill, url: model_url, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :amount, t('bill.field.sum') %>
    <div class="input-group mb-3">
      <%= form.text_field :amount, class: 'form-control money', value: '' %>
      <div class="input-group-append">
        <span class="input-group-text"><%= t('number.currency.format.unit') %></span>
      </div>
    </div>
  </div>
  <div class="fast-buttons d-inline">
    <button type="button" class="btn btn-outline-dark btn-circle" data-value="10.00">10</button>
    <button type="button" class="btn btn-outline-dark btn-circle" data-value="20.00">20</button>
    <button type="button" class="btn btn-outline-dark btn-circle" data-value="50.00">50</button>
    <button type="button" class="btn btn-outline-dark btn-circle" data-value="100.00">100</button>
  </div>
  <div class="actions mt-3">
    <%= form.submit t('action.replenishment'), class: 'btn btn-success mb-3' %>
  </div>
<% end %>
