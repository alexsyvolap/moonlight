<%= form_with(model: manager_notifications, url: model_url, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :admin, t('notifications.field.admin') %>
    <%= form.hidden_field :admin_id %>
    <%= form.text_field :admin, class: "form-control #{' is-invalid ' if manager_notifications.errors[:admin_id].any? }",
                        value: '', placeholder: t('notifications.messages.giveNameNewAdmin') %>
    <% if manager_notifications.errors[:admin_id].any? %>
      <span class="invalid-feedback">
        <strong><%= manager_notifications.errors.messages[:admin_id][0] %></strong>
      </span>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit t('action.save'), class: 'btn btn-success' %>
  </div>
<% end %>
