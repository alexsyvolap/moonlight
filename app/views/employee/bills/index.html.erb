<%= link_to 'New Bill', new_employee_bill_path, class: 'btn btn-success mb-3' %>

<div class="card-body d-flex justify-content-start">
  <% @bills.each do |bill| %>
    <div class="card card-width shadow rounded <%= bill.credit? ? 'credit' : 'deposit' %>-card">
      <div class="card__face card--front">
        <img src="/images/moon_logo.svg" width="25" height="25" class="d-inline-block align-top card-image" alt="">
        <div class="card-body text-center">
          <span class="card-number"><%= card_number_format(bill.card_number) %></span> <br>
          <span class="card-date"><%= card_date_expired(bill.expired_bill_at) %></span>
        </div>
      </div>
      <div class="card__face card--back">
        <div class="card-body">
          <span class="amount"><%= bill.amount %></span>
          <span class="amount_limit"><%= bill.amount_limit %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>